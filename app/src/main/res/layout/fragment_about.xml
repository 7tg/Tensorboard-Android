<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tayyipgoren.tensorboard.AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tayyipLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="25px"
            android:minWidth="50dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:src="@drawable/tayyip"
                app:civ_border_color="#FF000000"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="Tayyip GÃ–REN"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#191919"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/my_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@android:color/background_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_if_globe_309064"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:text="tayyipgoren.github.io"
                android:textAlignment="textStart"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_linkedin"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:text="linkedin.com/in/tayyipgoren"
                android:textAlignment="textEnd"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#707070"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_github"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:text="github.com/tayyipgoren"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:autoLink="email"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:linksClickable="true"
                android:text="tayyipgoren@gmail.com"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
